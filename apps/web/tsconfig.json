{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "*"
      ]
    },
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "ES2017",
    "strict": false,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strictNullChecks": true
  },
  "include": [
    ".next/types/**/*.ts",
    "src",
    ".next-build/types/**/*.ts"
  ],
  "exclude": [
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**",
    "**/*.stories.*",
    "src/jobs/**",
    "node_modules",
    "dist",
    ".next"
  ]
}
