{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev": "NODE_OPTIONS=\"--require=./scripts/nexa-path-shim.js\" next dev -p 3000",
    "build": "next build",
    "start": "NODE_ENV=production next start -p 3010",
    "lint": "next lint",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "seed:admin": "tsx scripts/createAdmin.ts",
    "seed:employees": "tsx scripts/seedEmployees.ts",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "postinstall": "node scripts/create-nexa-registry-stub.js",
    "test:e2e": "playwright test",
    "snap:a11y": "echo a11y-scan-placeholder",
    "verify:modules": "node scripts/verify-modules-shape.mjs",
    "verify:ui": "node scripts/verify-ui.js",
    "wire:ctas": "tsx scripts/cta-wire.ts",
    "verify:data": "node scripts/verify-data.js",
    "test:kpi": "playwright test tests/api/kpi.spec.ts -c ./playwright.config.ts || npx playwright test tests/api/kpi.spec.ts",
    "api:dev": "next dev -p 3000",
    "verify:api": "start-server-and-test dev http://localhost:3000/api/health test:api",
    "test:e2e:ui": "PW_BASE_URL=http://localhost:3000 playwright test --ui",
    "test:api": "cross-env TEST_BASE_URL=http://localhost:3000 jest -c jest.config.ts",
    "test:start-and-e2e": "start-server-and-test dev http://localhost:3000/api/health test:e2e",
    "test:start-and-api": "start-server-and-test dev http://localhost:3000/api/health test:api",
    "verify:qa": "npm-run-all -s dev:once test:api test:e2e",
    "dev:once": "wait-on http-get://localhost:3000/api/health || (npm run -s dev & wait-on http-get://localhost:3000/api/health)",
    "qa:both": "run-s test:api test:e2e",
    "qa:dev:both": "start-server-and-test 'cross-env E2E_MODE=1 NODE_OPTIONS=\"--require=./scripts/nexa-path-shim.js\" next dev -p 3000' http://localhost:3000/api/health qa:both",
    "qa:e2e": "cross-env E2E_MODE=1 playwright test",
    "lh:ci": "pnpm -s opt:images && pnpm -s build:prod && lhci autorun --config=.lighthouserc.json",
    "lh:summary": "node ./scripts/lhci-report-summary.mjs",
    "verify:lh": "node scripts/lh-wait-and-run.mjs",
    "verify:envs": "tsx scripts/check-envs.ts",
    "a11y:smoke": "tsx scripts/a11y.smoke.ts",
    "sentry:smoke": "node scripts/sentry-smoke.mjs",
    "lh:local": "node scripts/ops/lhci-local.mjs",
    "build:release": "bash ./scripts/build-release.sh",
    "sentry:info": "npx sentry-cli --version && npx sentry-cli info || true",
    "build:prod": "NEXT_TELEMETRY_DISABLED=1 NODE_ENV=production pnpm build",
    "start:prod": "next start -p 3010",
    "lh:run": "lhci autorun --config=.lighthouserc.json",
    "lh:assert": "lhci assert --config=.lighthouserc.json",
    "lh:urls": "echo [\"http://localhost:3010/login\",\"http://localhost:3010/dashboard\"]",
    "opt:images": "node --experimental-modules ./scripts/optimise-images.mjs || node ./scripts/optimise-images.mjs",
    "verify:budgets": "bash ./scripts/verify-budgets.sh",
    "test:a11y": "playwright test -c tests/playwright.config.ts",
    "test:a11y:ci": "start-server-and-test \"LOCAL_LH=1 pnpm start -p 3010\" http://127.0.0.1:3010/login \"BASE_URL=http://127.0.0.1:3010 pnpm test:a11y\"",
    "lh:smoke": "lhci collect --config=.lighthouserc.json || true",
    "audit:images": "node ./scripts/image-audit.mjs",
    "perf:quick": "pnpm -s opt:images && pnpm -s build:prod && pnpm -s size"
  },
  "dependencies": {
    "@nexa/registry": "file:../../stubs/registry",
    "@sentry/nextjs": "^8.55.0",
    "@sentry/profiling-node": "^10.17.0",
    "@sentry/tracing": "^7.120.4",
    "@sentry/types": "^10.17.0",
    "bcrypt": "^6.0.0",
    "ioredis": "^5.8.0",
    "next": "15.4.6",
    "next-auth": "^4.24.11",
    "nodemailer": "^6",
    "otplib": "^12.0.1",
    "pdf-lib": "^1.17.1",
    "pg": "^8.16.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "stripe": "^14.25.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.55.1",
    "@prisma/client": "^6.16.3",
    "@sentry/cli": "^2.56.0",
    "@sentry/node": "^8.55.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "dotenv": "16",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^29.7.0",
    "jsdom": "^22.1.0",
    "lighthouse": "^11.4.0",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.55.0",
    "sharp": "^0.34.4",
    "start-server-and-test": "^2.1.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "4.20.4",
    "typescript": "^5",
    "zod": "^3.23.8"
  },
  "packageManager": "pnpm@10.3.0",
  "license": "UNLICENSED"
}