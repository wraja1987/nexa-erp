  <script>
    // Collapsible logic + accessible state
    document.querySelectorAll('.mod').forEach(m => {
      const head = m.querySelector('.mod-head');
      const body = m.querySelector('.mod-body');
      head.addEventListener('click', () => {
        body.classList.toggle('open');
        const expanded = head.getAttribute('aria-expanded') === 'true';
        head.setAttribute('aria-expanded', String(!expanded));
        body.setAttribute('aria-hidden', String(expanded));
      });
      head.addEventListener('keypress', (e) => {
        if(e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          head.click();
        }
      });
    });

    // Filtering + search
    const chips = document.querySelectorAll('.chip');
    const search = document.getElementById('searchBox');
    let active = 'all';
    function applyFilter(){
      const q = search.value.toLowerCase().trim();
      document.querySelectorAll('#mods .mod').forEach(card => {
        const tags = (card.getAttribute('data-tags') || '').toLowerCase();
        const text = card.textContent.toLowerCase();
        const tagMatch = active === 'all' || tags.includes(active);
        const textMatch = !q || text.includes(q);
        card.style.display = (tagMatch && textMatch) ? '' : 'none';
      });
    }
    chips.forEach(c => c.addEventListener('click', () => {
      chips.forEach(x => x.classList.remove('active'));
      c.classList.add('active');
      active = c.getAttribute('data-filter');
      applyFilter();
    }));
    search.addEventListener('input', applyFilter);

    // Year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
