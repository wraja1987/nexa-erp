                    <rect x="0" y="0" width="420" height="30" fill="#f4f7ff"/>
                    <circle cx="90" cy="120" r="34" fill="#dfe8ff"/>
                    <circle cx="200" cy="120" r="34" fill="#cfe0ff"/>
                    <circle cx="310" cy="120" r="34" fill="#bfd6ff"/>
